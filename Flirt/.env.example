# Flirt Hair & Beauty - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=production
APP_URL=https://flirt.hair
API_BASE_URL=https://flirt.hair/api

# ============================================
# SECURITY
# ============================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Initial admin password (change immediately after first login)
ADMIN_SEED_PASSWORD=ChangeMe123!

# ============================================
# DATABASE
# ============================================
# Leave empty for default SQLite path (./db/flirt.db)
DATABASE_PATH=

# ============================================
# EMAIL (SMTP)
# ============================================
# Gmail example (enable "Less secure app access" or use App Passwords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email sender details
FROM_EMAIL=bookings@flirt.hair
FROM_NAME=Flirt Hair & Beauty

# Salon contact info (used in emails)
SALON_PHONE=+27 11 123 4567
SALON_ADDRESS=Shop 12, Mall of the South, Johannesburg

# ============================================
# PAYFAST (South African Payment Gateway)
# ============================================
# Get credentials from: https://www.payfast.co.za/
# For sandbox testing, use: merchant_id=10000100, merchant_key=46f0cd694581a, passphrase=jt7NOE43FZPn
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
# Set to 'true' for testing with sandbox
PAYFAST_SANDBOX=true

# ============================================
# YOCO (South African Payment Gateway)
# ============================================
# Get credentials from: https://dashboard.yoco.com/
YOCO_SECRET_KEY=
YOCO_PUBLIC_KEY=
YOCO_WEBHOOK_SECRET=

# ============================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ============================================
# Generate keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:bookings@flirt.hair
